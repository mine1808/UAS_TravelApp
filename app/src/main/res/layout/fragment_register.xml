<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="32dp"
    android:background="@color/huntergreen"
    tools:context=".Fragment.RegisterFragment">

    <TextView
        android:id="@+id/daftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Daftar dulu yuk!"
        android:textSize="35sp"
        android:textColor="@color/kawaii"/>

    <TextView
        android:id="@+id/nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama :"
        android:textSize="16sp"
        android:layout_gravity="start"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/kawaii"/>

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:inputType="textPersonName"
        android:fontFamily="@font/poppins"
        android:textColor="@color/white"
        android:backgroundTint="@color/kawaii"/>

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username :"
        android:textSize="16sp"
        android:layout_gravity="start"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/kawaii"/>

    <EditText
        android:id="@+id/edit_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:inputType="text"
        android:fontFamily="@font/poppins"
        android:textColor="@color/white"
        android:backgroundTint="@color/kawaii"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email :"
        android:textSize="16sp"
        android:layout_gravity="start"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/kawaii"/>

    <EditText
        android:id="@+id/edit_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:inputType="textEmailAddress"
        android:fontFamily="@font/poppins"
        android:textColor="@color/white"
        android:backgroundTint="@color/kawaii"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password :"
        android:textSize="16sp"
        android:layout_gravity="start"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/kawaii"/>

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:inputType="textPassword"
        android:fontFamily="@font/poppins"
        android:textColor="@color/white"
        android:backgroundTint="@color/kawaii"/>

    <TextView
        android:id="@+id/txt_have_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sudah punya akun? Masuk di sini"
        android:textSize="14sp"
        android:layout_gravity="start"
        android:layout_marginVertical="4dp"
        android:fontFamily="@font/poppins"
        android:textColor="@color/kawaii"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/finn"
        android:text="Register"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/kawaii"
        android:layout_marginTop="10dp"
        android:paddingVertical="10dp"
        app:cornerRadius="20dp"/>

</LinearLayout>