<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/huntergreen"
    tools:context=".Fragment.ProfileFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salwa Jasmine A"
        android:textSize="40sp"
        android:textColor="@color/kawaii"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginVertical="4dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22/504834/SV/21715"
        android:textSize="30sp"
        android:fontFamily="@font/poppins"
        android:textAlignment="center"
        android:textColor="@color/kawaii"
        android:layout_marginBottom="64dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sesi Login Saat Ini"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/kawaii"
        android:layout_gravity="start"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/finn">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="18sp"
            android:fontFamily="@font/poppins"
            android:layout_weight="1"
            android:textColor="@color/kawaii"
            android:paddingStart="5dp"/>
        <TextView
            android:id="@+id/txt_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=": username_abc"
            android:textSize="18sp"
            android:fontFamily="@font/poppins"
            android:layout_weight="2"
            android:textColor="@color/kawaii"
            android:paddingStart="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/timberwolf">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="18sp"
            android:fontFamily="@font/poppins"
            android:layout_weight="1"
            android:textColor="@color/huntergreen"
            android:paddingStart="5dp"/>
        <TextView
            android:id="@+id/txt_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=": email@email.com"
            android:textSize="18sp"
            android:fontFamily="@font/poppins"
            android:layout_weight="2"
            android:textColor="@color/huntergreen"
            android:paddingStart="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/finn">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Role"
            android:textSize="18sp"
            android:fontFamily="@font/poppins"
            android:layout_weight="1"
            android:textColor="@color/kawaii"
            android:paddingStart="5dp"/>
        <TextView
            android:id="@+id/txt_role"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=": role user"
            android:textSize="18sp"
            android:fontFamily="@font/poppins"
            android:layout_weight="2"
            android:textColor="@color/kawaii"
            android:paddingStart="5dp"/>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/finn"
        android:text="Log Out"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/kawaii"
        android:layout_marginTop="20dp"
        android:paddingVertical="10dp" />

</LinearLayout>